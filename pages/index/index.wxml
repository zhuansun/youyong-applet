<!--index.wxml-->
<view class="container">
  <view>
    <i-message id="message" />
  </view>

  <view class="userinfo">
    <block wx:if="{{!hasUserInfo && canIUse}}">
      <image class="userinfo-avatar" src="https://i.loli.net/2017/08/21/599a521472424.jpg" mode="cover"></image>
      <text class="userinfo-nickname">我们还不知道你是谁</text>
    </block>
    <block wx:else>
      <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>

  <view class="usersteps">
    <view class="userstepsdetail">
      <i-steps current="{{current}}" direction="vertical">
        <i-step>
          <view slot="title">
            获取头像信息
          </view>
          <view slot="content">
            请授权本小程序使用您的微信头像和昵称
          </view>
        </i-step>
        <i-step>
          <view slot="title">
            登录程序
          </view>
          <view slot="content">
            请登录使用本小程序
          </view>
        </i-step>
        <i-step>
          <view slot="title">
            完成操作
          </view>
          <view slot="content">
            您已完成所有操作，开始使用吧！
          </view>
        </i-step>
      </i-steps>
    </view>
    <view>
      <i-button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" type="primary" bind:getuserinfo="getUserAvatarAndName">获取头像昵称</i-button>
      <i-button wx:elif="{{hasUserInfo && !hasLogin}}" type="primary" bind:click="login">登陆</i-button>
      <i-button wx:elif="{{hasUserInfo && hasLogin}}" type="primary" bind:click="toUse">开始使用</i-button>
    </view>
  </view>

  <view>

  </view>


</view>